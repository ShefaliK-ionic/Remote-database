<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.view.tab_fragment.ConnectionFragment">

    <!-- TODO: Update blank fragment layout -->
 <androidx.cardview.widget.CardView
     android:id="@+id/cardSignout"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
    app:cardElevation="@dimen/_10sdp"
     android:visibility="visible"
     android:layout_centerVertical="true"
     android:layout_centerHorizontal="true"
     app:cardCornerRadius="@dimen/_95sdp"
     android:outlineAmbientShadowColor="@color/dark_blue_instruction"
     android:outlineSpotShadowColor="@color/dark_blue_instruction"
     app:cardBackgroundColor="@color/transparent"
     >
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         >

<!--    <View-->
<!--        android:layout_width="@dimen/_215sdp"-->
<!--        android:layout_height="@dimen/_215sdp"-->
<!--        android:layout_centerInParent="true"-->
<!--        -->
<!--        android:backgroundTint="@color/last_circle_color"-->
<!--        android:background="@drawable/circle_bg" />-->

    <View
       android:layout_width="@dimen/_205sdp"
       android:layout_height="@dimen/_205sdp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/first_circle_color"
        android:background="@drawable/circle_bg" />

    <View
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/circle_bg"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:layout_margin="@dimen/_15sdp"
        />


         <View
             android:layout_width="@dimen/_170sdp"
             android:layout_height="@dimen/_170sdp"
             android:layout_centerInParent="true"
             android:layout_marginStart="@dimen/_15sdp"

             android:layout_marginTop="@dimen/_15sdp"
             android:layout_marginEnd="@dimen/_15sdp"
             android:layout_marginBottom="@dimen/_15sdp"
             android:background="@drawable/circle_bg"
             android:backgroundTint="@color/last_circle_color" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:gravity="center"

    >

    <ImageView
        android:id="@+id/imgSignOff"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:src="@drawable/img_sign_off"
         />

    <TextView
        android:id="@+id/tvConnectionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/connected"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_12ssp"
        />


    <TextView
        android:id="@+id/tvConnectionTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue_instruction"
        android:text="00:17 Minute"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_12ssp"
        />

</LinearLayout>

     </RelativeLayout>
 </androidx.cardview.widget.CardView>



    <LinearLayout
        android:id="@+id/linearAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >

    <RelativeLayout
        android:id="@+id/relativeRecentMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:background="@drawable/curved_button_border"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imgMsg"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"

            android:layout_centerVertical="true"
            android:src="@drawable/img_message_box" />


        <TextView
            android:id="@+id/tvInstantCallMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_toRightOf="@id/imgMsg"
            android:fontFamily="@font/inter_medium"
            android:text="I am in the meeting"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvInstantCallMsg"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_toRightOf="@id/imgMsg"
            android:fontFamily="@font/inter_medium"

            android:text="@string/message_will_be_sent_after_ending_call"
            android:textColor="@color/white"
            android:textSize="@dimen/_9ssp"

            />

        <ImageView
            android:id="@+id/imgNavigate"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:rotation="180"
            android:src="@drawable/ic_back"
            app:tint="@color/light_blue" />


    </RelativeLayout>

    </LinearLayout>
</RelativeLayout>